@model DemoMVC934.Models.Student
@{
    ViewData["Title"] = "Model Binding Example";
}

<h2>4️⃣ Gửi – Nhận dữ liệu theo Model</h2>

<form asp-action="Register" method="post">
    <label>Họ tên:</label>
    <input asp-for="Name" class="form-control" />
    <label>Tuổi:</label>
    <input asp-for="Age" type="number" class="form-control" />
    <br />
    <button type="submit" class="btn btn-primary">Gửi</button>
</form>

@if (ViewBag.Info != null)
{
    <hr />
    <h4>Kết quả từ Controller:</h4>
    <p>@ViewBag.Info</p>
}

<hr />
<p><a asp-action="Index" asp-controller="Demo">⬅ Quay lại Trang chủ</a></p>